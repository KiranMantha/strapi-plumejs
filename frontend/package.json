{
	"name": "frontend",
	"version": "1.0.0",
	"description": "a plumejs app to render ui based on strapi content types",
	"main": "index.js",
	"scripts": {
		"start": "vite",
		"build": "yarn tsc && vite build",
		"tsc": "tsc -p tsconfig.json --noEmit",
		"test": "vitest",
		"test:coverage": "yarn test --coverage",
		"lint": "eslint \"{src,test}/**/*.ts\" --fix",
		"lint:ci": "rimraf eslint-report.json && eslint src --format json -o eslint-report.json || find eslint-report.json",
		"show-dep-graph": "skott --displayMode=webapp"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@plumejs/core": "^4.2.1",
		"@plumejs/router": "^4.2.0",
		"@plumejs/testing": "^4.1.3",
		"@types/axios": "^0.14.0",
		"@types/remarkable": "^2.0.8",
		"axios": "^1.7.7",
		"remarkable": "^2.0.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@vitest/coverage-istanbul": "2.1.2",
		"eslint": "^9.12.0",
		"globals": "^15.10.0",
		"happy-dom": "^15.7.4",
		"prettier": "^3.3.3",
		"rollup-plugin-visualizer": "^5.12.0",
		"sass": "^1.79.4",
		"skott": "^0.35.3",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.8.1",
		"vite": "^5.4.8",
		"vitest": "^2.1.2"
	}
}
